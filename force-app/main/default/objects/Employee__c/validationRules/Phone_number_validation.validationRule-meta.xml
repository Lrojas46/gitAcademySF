<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_number_validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT( REGEX( Mobile_number__c, &quot;\\D*?(\\d\\D*?){10}&quot; ) )</errorConditionFormula>
    <errorDisplayField>Mobile_number__c</errorDisplayField>
    <errorMessage>Please provide a valid Phone number</errorMessage>
</ValidationRule>
